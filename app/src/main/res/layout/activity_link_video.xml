<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LinkVideo"
    android:background="@color/SoftOrangeTravel">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <LinearLayout
        android:id="@+id/tombolKiri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="40dp"
        >

        <Button
            android:id="@+id/tombolVideo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VIDEO 1"
            android:textColor="@color/white" />

    </LinearLayout>

        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@id/tombolKiri"
        android:padding="40dp">

        <Button
            android:id="@+id/tombolVideo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VIDEO 2"
            android:textColor="@color/white"
            />


    </LinearLayout>

    </LinearLayout>

</RelativeLayout>